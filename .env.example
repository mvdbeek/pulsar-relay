# Server Configuration
APP_NAME="Pulsar Proxy"
HTTP_PORT=8080
WORKERS=4

# Storage Backend Selection
# Options: "memory" (in-memory, fast, non-persistent) or "valkey" (persistent, durable)
STORAGE_BACKEND=memory

# Valkey Configuration (used when STORAGE_BACKEND=valkey)
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_PASSWORD=
VALKEY_USE_TLS=false

# Storage Configuration
HOT_TIER_RETENTION=600
PERSISTENT_TIER_RETENTION=86400
MAX_MESSAGES_PER_TOPIC=1000000

# Limits
MAX_CONNECTIONS_PER_INSTANCE=10000
MAX_MESSAGE_SIZE=1048576
RATE_LIMIT_PER_CLIENT=1000

# Logging
LOG_LEVEL=INFO
